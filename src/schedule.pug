---
title: Schedule
layout: layout.html
order: 1
---
table.schedule
  thead
      tr
        th Date
        th Topic
        th Notes
        th Assignments
  tbody
    each day in schedule
      tr(class=day.canceled ? "canceled" : "")
        td #{day.date}
        if day.event
          td.event(colspan=3) #{day.event}
        else
          td #{day.topic}
          td
            if day.slides
              a(href=relative("/lectures/" + day.slides)) slides
            | #{" "}
            if day.notes
              a(href=relative("/lectures/" + day.notes)) notes
          td #{day.assignments}
